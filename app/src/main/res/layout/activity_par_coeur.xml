<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display.ParCoeurActivity">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Blabla"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/guideline90v"
        app:layout_constraintStart_toStartOf="@+id/guideline10v"
        app:layout_constraintTop_toTopOf="@+id/guideline10h"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/editTextReponse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="RÃ©ponse"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/textViewIndice"
        app:layout_constraintStart_toStartOf="@+id/guideline10v"
        app:layout_constraintTop_toTopOf="@+id/guideline30h" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToParCoeur"
        android:text="Valider"
        app:layout_constraintBottom_toTopOf="@+id/guideline90h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline90h" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline90h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline90v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <TextView
        android:id="@+id/textViewIndice"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/editTextReponse"
        app:layout_constraintEnd_toStartOf="@+id/guideline90v"
        app:layout_constraintTop_toTopOf="@+id/editTextReponse" />

</androidx.constraintlayout.widget.ConstraintLayout>